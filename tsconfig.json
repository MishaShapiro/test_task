{
    "compilerOptions": {
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "outDir": "./dist",
    },
    "include": ["src/**/*"],
    "exclude": ["./dist/**/*"]
}
